{
  "manifest_version": 3,
  "name": "Tab Manager",
  "version": "1.0",
  "description": "Menutup tab tidak aktif dan mengekspor informasi ke Excel",
  "permissions": [
    "tabs",
    "activeTab",
    "downloads",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["styles.css"],
      "matches": ["<all_urls>"]
    }
  ]
} 